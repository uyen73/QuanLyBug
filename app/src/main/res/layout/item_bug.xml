<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="32dp"
        android:background="@color/black"
        android:id="@+id/cardViewBug"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8">
                <TextView
                    android:id="@+id/txtTenBug"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Tên bug"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_weight="3"
                    android:id="@+id/cardviewTienDo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:id="@+id/txtTienDo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiến độ"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:padding="10dp"
                        />
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/imgMoreBug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtTenDev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Tên dev"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:id="@+id/txtDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline"
                    android:layout_alignParentEnd="true"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/txtThoiGianTao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian khởi tạo"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_time" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>