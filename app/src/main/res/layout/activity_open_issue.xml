<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".projects.OpenIssueActivity">
    <ImageView
        android:id="@+id/imgBackIssue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_margin="32dp"/>
    <TextView
        android:id="@+id/txtNameIssue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Issue"
        android:layout_margin="32dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameIssue"
        android:layout_centerInParent="true"
        android:layout_margin="32dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#C4F6DF"
        >
        <TextView
            android:id="@+id/txtMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đây là mô tả của vấn đề cần giải quyết,"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:padding="10dp"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear"
        android:layout_below="@+id/cardviewMoTa">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTenDev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dev: Tên...."
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/txtDueDateDev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due date dev"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTenTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test: Tên...."
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/txtDueDateTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due date test"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleviewBugs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        >

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>